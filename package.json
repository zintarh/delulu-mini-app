{
  "name": "delulu-v0",
  "version": "0.1.0",
  "description": "A new Celo blockchain project",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "contracts:compile": "turbo run compile --filter=hardhat",
    "contracts:test": "turbo run test --filter=hardhat",
    "contracts:deploy": "turbo run deploy --filter=hardhat",
    "contracts:deploy:alfajores": "turbo run deploy:alfajores --filter=hardhat",
    "contracts:deploy:sepolia": "turbo run deploy:sepolia --filter=hardhat",
    "contracts:deploy:celo": "turbo run deploy:celo --filter=hardhat"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/node": "^20.8.0",
    "chai": "^4.5.0",
    "ethers": "^6.16.0",
    "hardhat": "^3.1.2",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}